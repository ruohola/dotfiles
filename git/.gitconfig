[user]
	name = Eero Ruohola
	email = eero@ruohola.dev
[core]
	excludesfile = /Users/eero/.gitignore_global
	pager = delta
[credential]
	helper = osxkeychain
[log]
	date = format-local:%a %Y-%m-%d %H:%M
[blame]
	date = format-local:%a %Y-%m-%d %H:%M
[format]
	pretty = format:%C(auto,yellow)%h %C(auto,blue)%ad %C(auto,green)%<(8,trunc)%aN%x08%x08 %C(auto)%s %D
[init]
	defaultBranch = master
[push]
	default = simple
[pull]
	rebase = true
[rebase]
	autoStash = true
[diff]
	tool = vimdiff
	colorMoved = default
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[interactive]
	diffFilter = delta --color-only
[delta]
	commit-decoration-style = bold box ul
	file-style = bold
	line-numbers = true
[includeIf "gitdir:~/skole/"]
	path = ~/dotfiles/git/.gitconfig_skole
[includeIf "gitdir:~/shuup/"]
	path = ~/dotfiles/git/.gitconfig_shuup
