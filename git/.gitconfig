[user]
	name = Eero Ruohola
	email = eero@ruohola.dev
	signingKey = 6FBF8A6897FE618FE7C3E01FDC40A970DAB939A5
[core]
	excludesfile = ~/.gitignore_global
	pager = delta
[credential]
	helper = osxkeychain
[commit]
	verbose = true
	gpgSign = true
[tag]
	forceSignAnnotated = true
[log]
	date = format-local:%a %Y-%m-%d %H:%M
[blame]
	date = format-local:%a %Y-%m-%d %H:%M
[format]
	pretty = format:%C(auto,yellow)%h %C(auto,blue)%ad %C(auto,green)%<(8,trunc)%aN%x08%x08 %C(auto)%s %D
[init]
	defaultBranch = master
[push]
	default = simple
[pull]
	rebase = true
	twohead = ort
[rebase]
	autoStash = true
[diff]
	tool = vimdiff
	colorMoved = default
[diff "utf16"]
	textconv = "iconv -f utf-16 -t utf-8"
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[interactive]
	diffFilter = delta --color-only
[delta]
	commit-decoration-style = bold box ul
	file-style = bold
	line-numbers = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	recommit = !git commit --file=\"$(git rev-parse --git-dir)/COMMIT_EDITMSG\" --edit
[includeIf "gitdir:~/vincit/"]
	path = ~/dotfiles/git/.gitconfig_vincit
