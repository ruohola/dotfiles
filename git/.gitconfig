[user]
	name = Eero Ruohola
	email = eero@ruohola.dev
[core]
	excludesfile = /Users/eero/.gitignore_global
	pager = delta
[credential]
	helper = osxkeychain
[log]
	date = format-local:%a %Y-%m-%d %H:%M
[blame]
	date = format-local:%a %Y-%m-%d %H:%M
[format]
	pretty = format:%C(auto,yellow)%h %C(auto,blue)%ad %C(auto,green)%<(8,trunc)%aN%x08%x08 %C(auto,reset)%s %C(auto,red)%D
[push]
	default = simple
[pull]
	rebase = true
[rebase]
	autoStash = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[interactive]
    diffFilter = delta --color-only
[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
